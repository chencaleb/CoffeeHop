<div id = 'title'>
	<h1 id="coffeehop"><img id="logo" src="http://uxrepo.com/static/icon-sets/ionicons/png32/512/000000/coffee-512-000000.png">   C O F F E E     &nbsp;     H O P</h1>
	<p id= "subtitle">H O W &nbsp;F U L L &nbsp;I S &nbsp;Y O U R &nbsp;F A V O R I T E &nbsp;C A F E ?</p>
</div>

<hr>

<div id = "navbar">
	<ul>
		<li><a href="/" id="home">H O M E</a></li>
		<li><a href="/home/about/" id="about">A B O U T</a></li>
		<li><a href="/users/new/" id = "signup">S I G N U P</a></li>		
	</ul>
</div>

<%= form_for @user, url: "/sessions", method: "post" do |f| %>
  <h1>Log in to Coffee Hop</h1>
  <div>
    <%= f.text_field :email, placeholder: "Email..." %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: "Password..." %>
  </div>
  <%= f.submit "Log In", :class => "button" %>
  <div class="register_signin">
    <%= link_to "Register", "/users/new" %>
  </div>
<% end %>