<%= form_for @user, :html => {:class => "edit_form_style"} do |f| %>
    <h1> Edit Profile </h1>
    <div>
    	<h5>Username</h5>
      <%= f.text_field :username, required: true %>
    </div>
    <div> 	
    	<h5>Email</h5>
      <%= f.text_field :email, required: true %>
    </div>
    <%= f.submit "Save", class:"save_button" %>
  <% end %>

  <h3 class="delete_account">Delete Account</h3>

  <%= button_to "Delete", "/users/#{@user.id}", method: "delete" %>
